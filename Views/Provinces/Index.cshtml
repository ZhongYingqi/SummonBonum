@model IEnumerable<SummonBonum.Models.Province>

@{
    ViewData["Title"] = "Index";
}

<h1>The Provinces of China</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PictureUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src=@Html.DisplayFor(modelItem => item.PictureUrl) height="100"/>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProvinceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProvinceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProvinceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
